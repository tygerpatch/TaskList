<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
   "http://struts.apache.org/dtds/struts-2.3.dtd">   
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.action.excludePattern" value="/_ah/admin, index.jsp"/>

	<package name="default" extends="struts-default">
		<action name="taskList">
			<result>/jsp/taskList.jsp</result>
		</action>

		<action name="addTask" class="pojo.Task">
			<result name="input">/jsp/taskList.jsp</result>
			<result name = "success" type = "redirect">taskList.action</result>
		</action>
	</package>
</struts>
